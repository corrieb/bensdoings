FROM debian:jessie

RUN apt-get update && apt-get install -y jq ca-certificates curl tar

RUN mkdir /vic \
    && curl -k -L https://10.118.68.82:9443/vic_1.1.0.tar.gz | tar xz -C /vic \
    && cp /vic/vic/vic-machine-linux /vic \
    && cp /vic/vic/*.iso /vic \
    && rm -fr /vic/vic

CMD ["/bin/bash"]
